@{
    ViewBag.Title = "update";
}

@model PAS.Models.Application

<header id="head" class="secondary"></header>

<!-- container -->
<div class="container">


    <div class="row">

        <!-- Article main content -->
        <article class="col-xs-12 maincontent">
            <header class="page-header">
                <h1 class="page-title">Welcome!</h1>
            </header>

            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="thin text-center">Edit your Application Form, please.</h3>
                        <hr>

                        <form action="~/Admin/updateapplication" method="post">
                            <div class="top-margin">
                                <label>Subject <span class="text-danger">*</span></label>
                                <input type="text" name="subject" value="@Model.Subject" class="form-control">
                            </div>
                            <div class="top-margin">
                                <label>Body <span class="text-danger">*</span></label>
                                <input type="text" name="body" value="@Model.Body" class="form-control">
                            </div>
                            <div class="top-margin">
                                <label>Approval Status <span class="text-danger">*</span></label>
                                <select name="approval-status" class="form-control">
                                    <option selected value="1">Approved</option>
                                    <option value="0">Not Approved</option>
                                </select>
                            </div>

                            <input type="hidden" name="applicationId" value="@Model.ApplicationId" />

                            <hr>

                            <div class="row">
                                <div class="col-lg-8">
                                    <b><a href="">Forgot password?</a></b>
                                </div>
                                <div class="col-lg-4 text-right">
                                    <button class="btn btn-action" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </article>
        <!-- /Article -->

    </div>
</div>	<!-- /container -->
@{
    ViewBag.Title = "signin";
}

@model PAS.Models.User

<header id="head" class="secondary"></header>

<!-- container -->
<div class="container">

    <div class="row">
        1
        <!-- Article main content -->
        <article class="col-xs-12 maincontent">
            <header class="page-header">
                <h1 class="page-title">Sign in</h1>
            </header>

            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="thin text-center">Sign in to your account</h3>
                        <p class="text-center text-muted">If you want to signup click <a href="/Users/signup">Register</a> else continue sign in. </p>
                        <hr>
                        
                        <form action="LoginFactory" method="post">
                            <div class="top-margin">
                                <label>Email <span class="text-danger">*</span></label>
                                <input type="text" name="email" class="form-control" required>
                            </div>
                            <div class="top-margin">
                                <label>Password <span class="text-danger">*</span></label>
                                <input type="password" name="password" class="form-control" required>
                            </div>
                            <div class="top-margin">
                                <label>Log In as: <span class="text-danger">*</span></label>
                                <select name="login-type" class="form-control">
                                    <option selected value="1">Student</option>
                                    <option value="0">Principal</option>
                                </select>
                            </div>

                            <hr>

                            @*<div class="row">
                                <div class="col-lg-8">
                                    <b><a href="">Forgot password?</a></b>
                                </div>*@
                                <div class="col-lg-4 text-right">
                                    <button class="btn btn-action" type="submit">Sign in</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </article>
        <!-- /Article -->

    </div>
</div>	<!-- /container -->